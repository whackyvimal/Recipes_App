{
  "info": {
    "name": "Recipes App API",
    "_postman_id": "recipes-app-collection",
    "description": "Postman collection for Recipes CRUD API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Recipe",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/recipes",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "recipes"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Pasta\",\n  \"ingredients\": [\n    \"noodles\",\n    \"tomato\",\n    \"cheese\"\n  ],\n  \"instructions\": \"Boil pasta, add sauce, top with cheese.\"\n}"
        }
      }
    },
    {
      "name": "Get All Recipes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/recipes",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "recipes"
          ]
        }
      }
    },
    {
      "name": "Get Recipe By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/recipes/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "recipes",
            ":id"
          ]
        }
      }
    },
    {
      "name": "Update Recipe",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/recipes/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "recipes",
            ":id"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Pasta\",\n  \"ingredients\": [\n    \"noodles\",\n    \"cream\",\n    \"cheese\"\n  ],\n  \"instructions\": \"Boil pasta, add cream sauce, top with cheese.\"\n}"
        }
      }
    },
    {
      "name": "Delete Recipe",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/recipes/:id",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "recipes",
            ":id"
          ]
        }
      }
    }
  ]
}